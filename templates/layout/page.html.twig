{#
/**
 * @file
 * Theme override to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - messages: Status and error messages. Should be displayed prominently.
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header_menu:   Headmenu
 * - page.logo:  Logo Position
 * - page.searchbar:   Search bar
 * - page.primary_menu:  Main Menu
 * - page.secondary_menu: Side Menu (currently not active)
 * - page.off_canvas:  Off Canvas (currently not active)
 * - page.highlighted:   Main Topic
 * - page.messages:  Messages
 * - page.content:   Content
 * - page.sidebar_first:   Left Sidebar
 * - page.sidebar_second:  Right Sidebar
 * - page.col_1:   First Column
 * - page.col_2:   Second Column
 * - page.col_3:   Third Column
 * - page.col_4:   Fourth Column
 * - page.col_5:   Fifth Column
 * - page.col_6:   Sixth Column
 * - page.breadcrumbs:   Breadcrumbs
 * - page.footer:  Footer
 * - page.footer_menu:   Footer Menu
 * - page.credits:   Credits
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}
<div class="layout-container">
  {% if page.header_menu or page.logo or page.searchbar %}
  <header role="banner">
    {{ page.header_menu }}
    {% if page.logo and page.searchbar %}
      <div class="logo-search">
        {{ page.logo }}
        {{ page.searchbar }}
      </div>
    {% elseif page.logo or page.searchbar %}
      {{ page.logo }}
      {{ page.searchbar }}
    {% endif %}
  </header>
  {% endif %}

  {{ page.primary_menu }}

  {{ page.highlighted }}

  {{ page.messages }}

  <main role="main" class="container">
    {% set cols = [page.col_1, page.col_2, page.col_3, page.col_4, page.col_5, page.col_6] %}
    {% set active = 0 %}
    {% for col in cols if col is not empty %}
      {% set active = active + 1 %}
    {% endfor %}
    
    {# Different layout according to number of columns #}
    {% if active == 0 %} {# no column #}
      {% set cont= page.content %}
    {% elseif active == 1 %} {# one column #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
              {% for col in cols if col is not empty %}
                <section class="col-xxs-12">
                  {{ col }}
                </section>
              {% endfor %}
        </div>
      {% endset %}
    {% elseif active == 2 %} {# two columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
              {% for col in cols if col is not empty %}
                <section class="col-sm-6 col-xxs-12">
                  {{ col }}
                </section>
              {% endfor %}
        </div>
      {% endset %}
    {% elseif active == 3 %} {# three columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
              {% for col in cols if col is not empty %}
                {% if loop.first %}
                  <section class="col-md-4 col-xxs-12">
                    {{ col }}
                  </section>
                {% else %}
                  <section class="col-md-4 col-xs-6 col-xxs-12">
                    {{ col }}
                  </section>
                {% endif %}
              {% endfor %}
        </div>
      {% endset %}
    {% elseif active == 4 %} {# four columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
              {% for col in cols if col is not empty %}
                <section class="col-lg-3 col-sm-6 col-xxs-12">
                  {{ col }}
                </section>
              {% endfor %}
        </div>
      {% endset %}
    {% elseif active == 5 %} {# five columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            {% for col in cols if col is not empty %}
              {% if loop.index == 1 %}
                <section class="col-xl-6 col-xxs-12">
                  {{ col }}
                </section>
              {% elseif loop.index == 2 %}
                <section class="col-xl-6 col-lg-3 col-xs-6 col-xxs-12">
                  {{ col }}
                </section>
              {% elseif loop.index == 3 %}
                <section class="col-xl-4 col-lg-3 col-xs-6 col-xxs-12">
                  {{ col }}
                </section>
              {% elseif loop.index == 4 %}
                <section class="col-xl-4 col-lg-3 col-xs-6 col-xxs-12">
                  {{ col }}
                </section>
              {% elseif loop.index == 5 %}
                <section class="col-xl-4 col-lg-3 col-xs-6 col-xxs-12">
                  {{ col }}
                </section>
              {% endif %}
            {% endfor %}
        </div>
      {% endset %}
    {% else %} {# six columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
              {% for col in cols if col is not empty %}
                <section class="col-lg-4 col-xs-6 col-xxs-12">
                  {{ col }}
                </section>
              {% endfor %}
        </div>
      {% endset %}
    {% endif %}
    
    {% if page.sidebar_first %}
      {% if page.sidebar_second %}
        <div class="maincontent col-xl-8 col-md-6 col-xxs-12 push-xl-2 push-md-3">
            {{ cont }}
        </div>
        <aside class="sidebar-left col-xl-2 col-md-3 col-xs-6 col-xxs-12 pull-xl-8 pull-md-6"> {{ page.sidebar_first }} </aside>
        <aside class="sidebar-right col-xl-2 col-md-3 col-xs-6 col-xxs-12"> {{ page.sidebar_second }} </aside>
      {% else %}
        <div class="maincontent col-lg-9 col-sm-8 col-xxs-12 push-lg-3 push-sm-4">
            {{ cont }}
        </div>
        <aside class="sidebar-left col-lg-3 col-sm-4 col-xxs-12 pull-lg-9 pull-sm-8"> {{ page.sidebar_first }} </aside>
      {% endif %}
    {% elseif page.sidebar_second %}
      <div class="maincontent col-lg-9 col-sm-8 col-xxs-12">
        {{ cont }}
      </div>
      <aside class="sidebar-right col-lg-3 col-sm-4 col-xxs-12"> {{ page.sidebar_second }} </aside>
    {% else %}
      <div class="maincontent col-xxs-12">
        {{ cont }}
      </div>
    {% endif %}
  </main>
  {{ page.breadcrumb }}
  {% if page.footer or page.footer_menu or page.credits %}
    <footer role="contentinfo" class="pagefooter">
      <div class="container">
        {% if page.footer %}
          {% if page.footer_menu %}
            {% if page.credits %}
              <section class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12 col-xxs-12 margin-sm-right"> {{ page.footer }} </section>
              <section class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12 col-xxs-12 margin-lg margin-sm-left"> {{ page.footer_menu }} </section>
              <section class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12 col-xxs-12 margin-lg-left"> {{ page.credits }} </section>
            {% else %}
              <section class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 col-xxs-12 margin-md-right"> {{ page.footer }} </section>
              <section class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 col-xxs-12 margin-md-left"> {{ page.footer_menu }} </section>
            {% endif %}
          {% elseif page.credits %}
            <section class="col-xl-6 col-lg-4 col-md-4 col-sm-12 col-xs-12 col-xxs-12 margin-md-right"> {{ page.footer }} </section>
            <section class="col-xl-6 col-lg-8 col-md-8 col-sm-12 col-xs-12 col-xxs-12 margin-md-left"> {{ page.credits }} </section>
          {% else %}
            <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer }} </section>
          {% endif %}
        {% elseif page.footer_menu %}
          {% if page.credits %}
            <section class="col-xl-6 col-lg-4 col-md-4 col-sm-12 col-xs-12 col-xxs-12 margin-md-right"> {{ page.footer_menu }} </section>
            <section class="col-xl-6 col-lg-8 col-md-8 col-sm-12 col-xs-12 col-xxs-12 margin-md-left"> {{ page.credits }} </section>
          {% else %}
            <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer_menu }} </section>
          {% endif %}
        {% else %}
          <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.credits }} </section>
        {% endif %}
      </div>
    </footer>
  {% endif %}

</div>{# /.layout-container #}
