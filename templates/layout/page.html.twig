{#
/**
 * @file
 * Theme override to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - messages: Status and error messages. Should be displayed prominently.
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header_menu:   Headmenu
 * - page.logo:  Logo Position
 * - page.searchbar:   Search bar
 * - page.primary_menu:  Main Menu
 * - page.off_canvas:  Off Canvas (currently not active)
 * - page.highlighted:   Main Topic
 * - page.messages:  Messages
 * - page.content:   Content
 * - page.sidebar_first:   Left Sidebar
 * - page.sidebar_second:  Right Sidebar
 * - page.col_1:   First Column
 * - page.col_2:   Second Column
 * - page.col_3:   Third Column
 * - page.col_4:   Fourth Column
 * - page.col_5:   Fifth Column
 * - page.col_6:   Sixth Column
 * - page.breadcrumbs:   Breadcrumbs
 * - page.footer:  Footer
 * - page.footer_menu:   Footer Menu
 * - page.credits:   Credits
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}
<div class="layout-container">
  {% if page.header_menu or page.logo or page.searchbar %}
  <header role="banner">
    {{ page.header_menu }}
    {% if page.logo and page.searchbar %}
      <div class="container">
        <div class="row">
          {{ page.logo }}
          {{ page.searchbar }}
        </div>
      </div>
    {% elseif page.logo or page.searchbar %}
      {{ page.logo }}
      {{ page.searchbar }}
    {% endif %}
  </header>
  {% endif %}

  {{ page.primary_menu }}

  {{ page.highlighted }}

  {{ page.messages }}

  <main role="main" class="container">
    {% set cols = [page.col_1, page.col_2, page.col_3, page.col_4, page.col_5, page.col_6] %}
    {% set active = 0 %}
    {% for col in cols if col is not empty %}
      {% set active = active + 1 %}
    {% endfor %}
    
    {# Different layout according two number of columns #}
    {% if active == 0 %} {# no column #}
      {% set cont= page.content %}
    {% elseif active == 1 %} {# one column #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            <div class="row">
                {% for col in cols if col is not empty %}
                  <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12">
                    {{ col }}
                  </section>
                {% endfor %}
            </div>
        </div>
      {% endset %}
    {% elseif active == 2 %} {# two columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            <div class="row">
                {% for col in cols if col is not empty %}
                  <section class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12 col-xxs-12">
                    {{ col }}
                  </section>
                {% endfor %}
            </div>
        </div>
      {% endset %}
    {% elseif active == 3 %} {# three columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            <div class="row">
                {% for col in cols if col is not empty %}
                  {% if loop.first %}
                    <section class="col-xl-4 col-lg-4 col-4-md col-sm-12 col-xs-12 col-xxs-12">
                      {{ col }}
                    </section>
                  {% else %}
                    <section class="col-xl-4 col-lg-4 col-4-md col-sm-6 col-xs-6 col-xxs-12">
                      {{ col }}
                    </section>
                  {% endif %}
                {% endfor %}
            </div>
        </div>
      {% endset %}
    {% elseif active == 4 %} {# four columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            <div class="row">
                {% for col in cols if col is not empty %}
                  <section class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12 col-xxs-12">
                    {{ col }}
                  </section>
                {% endfor %}
            </div>
        </div>
      {% endset %}
    {% elseif active == 5 %} {# five columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            <div class="row">
              {% for col in cols if col is not empty %}
                {% if loop.index == 1 %}
                  <section class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12">
                    {{ col }}
                  </section>
                {% elseif loop.index == 2 %}
                  <section class="col-xl-6 col-lg-3 col-md-6 col-sm-6 col-xs-6 col-xxs-12">
                    {{ col }}
                  </section>
                {% elseif loop.index == 3 %}
                  <section class="col-xl-4 col-lg-3 col-md-6 col-sm-6 col-xs-6 col-xxs-12">
                    {{ col }}
                  </section>
                {% elseif loop.index == 4 %}
                  <section class="col-xl-4 col-lg-3 col-md-6 col-sm-6 col-xs-6 col-xxs-12">
                    {{ col }}
                  </section>
                {% elseif loop.index == 5 %}
                  <section class="col-xl-4 col-lg-3 col-md-6 col-sm-6 col-xs-6 col-xxs-12">
                    {{ col }}
                  </section>
                {% endif %}
              {% endfor %}
          </div>
        </div>
      {% endset %}
    {% else %} {# six columns #}
      {% set cont %}
        {{ page.content }}
        <div class="main-cols container">
            <div class="row">
                {% for col in cols if col is not empty %}
                  <section class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-xs-6 col-xxs-12">
                    {{ col }}
                  </section>
                {% endfor %}
            </div>
        </div>
      {% endset %}
    {% endif %}
    
    <div class="row">
      {% if page.sidebar_first %}
        {% if page.sidebar_second %}
          <div class="maincontent">
              {{ cont }}
          </div>
          <aside class="sidebar_left col-xl-2 col-lg-3 col-3-md col-sm-6 col-xs-6 col-xxs-12"> {{ page.sidebar_first }} </aside>
          <aside class="sidebar_right col-xl-2 col-lg-3 col-3-md col-sm-6 col-xs-6 col-xxs-12"> {{ page.sidebar_second }} </aside>
        {% else %}
          <div class="maincontent">
              {{ cont }}
          </div>
          <aside class="sidebar_left col-xl-3 col-lg-3 col-4-md col-sm-4 col-xs-12 col-xxs-12"> {{ page.sidebar_first }} </aside>
        {% endif %}
      {% elseif page.sidebar_second %}
        <div class="maincontent">
          {{ cont }}
        </div>
        <aside class="sidebar_right col-xl-3 col-lg-3 col-4-md col-sm-4 col-xs-12 col-xxs-12"> {{ page.sidebar_second }} </aside>
      {% else %}
        <div class="maincontent">
          {{ cont }}
        </div>
      {% endif %}
    </div>
  </main>
  {{ page.breadcrumb }}
  {% if page.footer or page.footer_menu or page.credits %}
    <footer role="contentinfo" class="row">
      {% if page.footer %}
        {% if page.footer_menu %}
          {% if page.credits %}
            <section class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12 col-xxs-12"> {{ page.footer }} </section>
            <section class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12 col-xxs-12"> {{ page.footer_menu }} </section>
            <section class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.credits }} </section>
          {% else %}
            <section class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer }} </section>
            <section class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer_menu }} </section>
          {% endif %}
        {% elseif page.credits %}
          <section class="col-xl-6 col-lg-4 col-4-md col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer }} </section>
          <section class="col-xl-6 col-8-lg col-8-md col-sm-12 col-xs-12 col-xxs-12"> {{ page.credits }} </section>
        {% else %}
          <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer }} </section>
        {% endif %}
      {% elseif page.footer_menu %}
        {% if page.credits %}
          <section class="col-xl-6 col-lg-4 col-4-md col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer_menu }} </section>
          <section class="col-xl-6 col-8-lg col-8-md col-sm-12 col-xs-12 col-xxs-12"> {{ page.credits }} </section>
        {% else %}
          <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.footer_menu }} </section>
        {% endif %}
      {% else %}
        <section class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 col-xxs-12"> {{ page.credits }} </section>
      {% endif %}
    </footer>
  {% endif %}

</div>{# /.layout-container #}
